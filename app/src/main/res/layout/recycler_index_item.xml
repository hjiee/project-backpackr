<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="body"
            type="com.hjiee.appproject.data.remote.network.Body" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!--썸네일 이미지-->
        <ImageView
            android:id="@+id/iv_thumbnail"
            loadUrl="@{body.thumbnail_520}"
            android:layout_width="172dp"
            android:layout_height="172dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintCircleRadius="14dp"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/tv_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <!--게시글 제목-->
        <TextView
            android:id="@+id/tv_title"
            style="@style/TitleTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{body.title}"
            app:layout_constraintBottom_toTopOf="@+id/tv_seller"
            app:layout_constraintLeft_toLeftOf="@+id/iv_thumbnail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_thumbnail" />

        <!--게시글 작성자-->
        <TextView
            android:id="@+id/tv_seller"
            style="@style/SellerTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{body.seller}"
            app:layout_constraintLeft_toLeftOf="@+id/iv_thumbnail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>